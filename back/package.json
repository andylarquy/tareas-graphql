{
  "name": "tareas-graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node-ts src/server.ts",
    "dev": "nodemon src/server.ts",
    "build": "tsc -p .",
    "lint": "eslint --ext .ts, .",
    "lint:fix": "eslint --fix --ext .ts .",
    "codegen": "graphql-codegen --config codegen.yml && eslint --fix --ext .ts src/services/graphql/generated",
    "test": "jest"
  },
  "author": "Andres Suarez",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^9.0.1",
    "http-errors-response-ts": "^1.0.0",
    "mongodb": "^3.6.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-document-nodes": "^1.17.10",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/mongodb": "^3.6.12",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/node": "^14.14.41",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "jest-compact-reporter": "^1.2.9",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "rootDir": "./src",
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "reporters": [
      [
        "jest-compact-reporter",
        {
          "showPassingTests": true
        }
      ]
    ]
  }
}
